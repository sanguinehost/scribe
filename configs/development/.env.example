# Development Environment Configuration
# Copy this to .env and customize as needed

# Database Configuration
DATABASE_URL=postgresql://devuser:devpassword@localhost:5432/sanguine_scribe_dev
DB_USER=devuser
DB_PASSWORD=devpassword
DB_NAME=sanguine_scribe_dev
DB_PORT=5432

# Gemini AI Configuration
GEMINI_API_KEY=your_development_gemini_api_key_here

# Server Configuration
PORT=8080
SESSION_COOKIE_SECURE=false  # Allow insecure cookies in development
COOKIE_SIGNING_KEY=dev_cookie_signing_key_here
RUST_LOG=debug

# Qdrant Configuration
QDRANT_URL=http://localhost:6333  # No TLS in development
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_TLS_ENABLED=false

# Email Configuration (development)
APP_ENV=development
FROM_EMAIL=noreply@scribe.localhost
FRONTEND_BASE_URL=http://localhost:3000

# File Storage
UPLOAD_STORAGE_PATH=./uploads

# Tokenizer Configuration
TOKENIZER_MODEL_PATH=resources/tokenizers/gemma.model

# Token Counter Configuration
TOKEN_COUNTER_DEFAULT_MODEL=gemini-2.5-flash-preview-05-20

# Context Configuration
CONTEXT_TOTAL_TOKEN_LIMIT=200000
CONTEXT_RECENT_HISTORY_TOKEN_BUDGET=150000
CONTEXT_RAG_TOKEN_BUDGET=50000

# Chunking Configuration
CHUNKING_METRIC=word
CHUNKING_MAX_SIZE=200
CHUNKING_OVERLAP=20

# Development-specific settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ENABLE_DEBUG_ROUTES=true

# Container settings for development
CERT_PATH=./.certs
BACKEND_IMAGE=scribe-backend:dev
BACKEND_PORT=8080