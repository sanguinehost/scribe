# Environment variables for local development

# API URL - For local development with Vite proxy, this should be empty or relative
# When using Vite proxy, the frontend makes requests to its own origin
PUBLIC_API_URL=

# Backend target for Vite proxy (for local development)
# Set to staging backend if you want to develop against staging
# VITE_BACKEND_TARGET=https://scribe.sanguinehost.com
VITE_BACKEND_TARGET=https://localhost:8080

PUBLIC_APP_NAME=Sanguine Scribe
PUBLIC_ENVIRONMENT=development

# Feature flags for conditional compilation
PUBLIC_ENABLE_LOCAL_LLM=true